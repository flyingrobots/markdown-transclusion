{
  "name": "markdown-transclusion",
  "version": "1.0.1",
  "description": "Stream-based library for resolving Obsidian-style transclusion references in Markdown documents",
  "main": "dist/index.js",
  "bin": {
    "markdown-transclusion": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "markdown",
    "transclusion",
    "obsidian",
    "documentation",
    "stream",
    "transform"
  ],
  "author": "flyingrobots",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flyingrobots/markdown-transclusion.git"
  },
  "bugs": {
    "url": "https://github.com/flyingrobots/markdown-transclusion/issues"
  },
  "homepage": "https://github.com/flyingrobots/markdown-transclusion#",
  "engines": {
    "node": ">=18.18.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.27.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  }
}
